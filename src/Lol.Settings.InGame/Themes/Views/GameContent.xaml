<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:views="clr-namespace:Lol.Settings.InGame.UI.Views"
					xmlns:units="clr-namespace:Lol.Settings.InGame.UI.Units">
	
	<Style TargetType="{x:Type views:GameContent}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type views:GameContent}">
					<StackPanel Margin="20 10 0 0">
						<units:Graphic/>
						<units:GameControl/>
						<units:Play/>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>